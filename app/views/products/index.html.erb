<h1>Hardwares Shop</h1>

<table align="left" style="width:90%" border="2" >
  <tr>
    <th>Product Name</th>
    <th>Product Price</th>
    <th>Description</th>
    <th>Category</th>
    <th>In Stock</th>
    <th>Option</th>
  </tr>
  <%@products.each do |product| %>
  <tr>
    <td><%=product.product_name%></td>
    <td><%=number_to_currency(product.product_price)%></td>
    <td><%=product.description%></td>
    <td><%=product.category_name%></td>
    <td><%=product.stock_amount%></td>
    <td align="center"> <%=link_to "Edit", edit_product_path(product)%></td>
  </tr>
  <%end%>
</table>
